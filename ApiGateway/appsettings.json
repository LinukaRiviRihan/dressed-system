{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "design-route": {
        "ClusterId": "design-cluster",
        "Match": { "Path": "/api/designs/{**remainder}" }
      },
      "upload-route": {
        "ClusterId": "design-cluster",
        "Match": { "Path": "/uploads/{**remainder}" }
      },
      "quote-route": {
        "ClusterId": "quote-cluster",
        "Match": { "Path": "/api/quotes/{**remainder}" }
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": { "Path": "/api/orders/{**remainder}" }
      },
      "communication-cluster": {
        "ClusterId": "communication-cluster",
        "Match": { "Path": "/api/communications/{**remainder}" }
      }
    },
    "Clusters": {
      "design-cluster": {
        "Destinations": { "destination1": { "Address": "http://designservice:8080" } }
      },
      "quote-cluster": {
        "Destinations": { "destination1": { "Address": "http://quoteservice:8080" } }
      },
      "order-cluster": {
        "Destinations": { "destination1": { "Address": "http://orderservice:8080" } }
      },
      "communication-cluster": {
        "Destinations": { "destination1": { "Address": "http://orderservice:8080" } }
      }
    }
  }
}